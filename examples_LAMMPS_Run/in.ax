#------------------------------------------------------------------initialization-----------------------------------------------------------------------------#
dimension 		3
boundary		p p p
shell "mkdir -p dump"
#-----------------------------------------------------------------Box of simulation---------------------------------------------------------------------------#

read_data	/YOUR PATH/Fe.61000.lmp

change_box 	all xy final 0.0 xz final 0.0 yz final  0.0 boundary p p p

change_box 	all ortho 

#---------------------------------------------------------------Interatomic potential------------------------------------------------------------------------#
#set up your config
pair_style    adp
pair_coeff    * * /YOUR PATH/UMo.adp.txt Mo
fix		1 all nve
#----------------------------------------------------------------characterization----------------------------------------------------------------------------#

compute XRD all xrd 1.541838 Fe 2Theta 10 100 c 0.02 0.02 0.02 LP 1 manual
fix 25 all ave/histo/weight 1 1 1 30 100 250 c_XRD[1] c_XRD[2] mode vector file /YOUR PATH/dump/Deg2Theta.xrd

compute         SAED all saed 0.0251  Fe Kmax 1.72 &
                Zone 0 0 0 c 0.025 0.025 0.025 &
                dR_Ewald 0.01 echo manual

fix             2 all saed/vtk 1 1 1 c_SAED file /YOUR PATH/dump/001.saed

run 0

unfix           2
uncompute       XRD
uncompute       SAED





